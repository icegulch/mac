---
title: Results
layout: base.njk
permalink: "/results/"
---

<section id="results" class="section section-alt">
  <article class="col-md-8 offset-md-2">
    <h1 class="secondary-title secondary-title-darkbg">
      The Results
    </h1>

    {% for year, yearResults in collections.resultsByYear %}

      <table class="results-table">
        <caption>
          {{ year }}
        </caption>
        <thead>
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Time</th>
            <th>Report?</th>
          </tr>
        </thead>
        <tbody>
        {% for result in yearResults | reverse %}
          <tr>
            <td>
              {{ result.data.date | shortDate }}
            </td>
            <td>
              {{ result.data.name }}
            </td>
            <td>
              {{ result.data.run_duration }}
            </td>
            <td>
              {% if result.templateContent.length %}
                <a href="/results/reports/{{ result.data.run_date | slug }}-{{ result.data.name | slug }}/">
                  read
                </a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% endfor %}

    <aside class="alt-section-text">
      <p>
        Share your adventure on our <a href="/reports/">blog</a>.
      </p>
    </aside>
  </article>
</section>


