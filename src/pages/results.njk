<section id="results" class="section section-alt">
  <article class="col-md-8 offset-md-2">
    <h1 class="secondary-title secondary-title-darkbg">
      The Results
    </h1>

    {% for year, yearResults in results | groupby('year') | dictsort | reverse %}
      <table class="results-table">
        <caption>
          {{ year }}
        </caption>
        <thead>
          <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Time</th>
            <th>Report?</th>
          </tr>
        </thead>
        <tbody>
        {% for result in yearResults | reverse %}
          <tr>
            <td>
              {{ result.date | shortDate }}
            </td>
            <td>
              {{ result.runner_name }}
            </td>
            <td>
              {{ result.runner_time }}
            </td>
            <td>
              {% if result.related_report %}
                <a href="/blog/{{ result.date | gimmeYear }}/{{ result.related_report | slugify }}/">
                  read
                </a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
    {% endfor %}

    <aside class="alt-section-text">
      <p>
        Share your adventure on our <a href="/reports/">blog</a>.
      </p>
    </aside>
  </article>
</section>